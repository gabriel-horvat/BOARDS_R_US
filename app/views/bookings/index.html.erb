<div class="container">
  <div class="row">
    <h3> Here are your upcoming bookings </h3>
    <h4> Get excited!! </h4>

    <div class="bookings">
      <% @bookings.each do |booking| %>
      <div class="col-xs-12">
        <div class="booking-card">
          <div class="booking-image">
            <%= cl_image_tag(booking.board.photo, class: 'card-img') %>
          </div>
          <div class="booking-content">
            <p> You are going extremeeeee from <strong><%= booking.start_date %></strong> until <strong><%= booking.end_date %> </strong></p>
            <p> Your board of choice : <strong><%=  booking.board.name %></strong></p>
            <p> <em><%= booking.board.description %></em></p>
          </div>
          <div class="booking-button">
            <p> <%= link_to "Check out your board!", booking_path(booking.id), class: "btn btn-primary" %></p>
          </div>
        </div>
      </div>
        <% end %>
    </div>

    <p> <%= link_to "Back to boards", root_path, class: "btn btn-primary" %></p>

  </div>

</div>


