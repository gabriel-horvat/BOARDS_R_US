<div>

  <div>
    <div
        id="map"
        style="width: 100%;
        height: 300px;"
        data-markers="<%= @markers.to_json %>"
      >
    </div>


  <div class="flex-container">
    <div class="item-container">
      <h2><%= @booking.board.name %> is ready for pick up!</h2>
      <%= cl_image_tag(@booking.board.photo, height: 330, width: 540, crop: :pad) %>
      <div class="review-styling">
        <h3 class="h3">Reviews:</h3>
        <div class="form-group">
          <%= link_to "Add a Review", new_board_review_path(@booking.board.id), class: "btn btn-warning" %>
        </div>
        <%@booking.board.reviews.each do |review| %>
        <div class="review-box">
          <p> <%= review.content %> </p>
          <% review.rating.times do %>
          <i class="fas fa-star"></i>
          <% end %></p>
        </div>
        <% end %>
      </div>
    </div>

    <div class="description-container">
      <div class="booking-style">
        <p>From: <%= @booking.start_date %></p>
        <p>Until: <%= @booking.end_date %></p>
        <p> <%= @duration = (@booking.end_date - @booking.start_date).to_i %> days</p>
        <p> $<%= @duration * @booking.board.price %>0</p>
      </div>
      <div class="booking-description">
        <p><%= @booking.board.description %></p>
      </div>


    </div>

    </div>
  </div>
</div>
