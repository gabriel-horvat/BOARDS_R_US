<div>
  <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
    >
  </div>

  <h2 id="board-name"><%= @booking.board.name %> is ready for pick up!</h2>
  <div class="flex-container">

    <div class="item-container">
      <div id="image">
        <%= cl_image_tag(@booking.board.photo, height: 330, width: 540, crop: :pad) %>
      </div>
      <div class="review-styling">
        <h3 class="h3">Reviews:</h3>
        <div class="form-group">
          <%= link_to "Add a Review", new_board_review_path(@booking.board.id), class: "btn btn-warning" %>
        </div>
        <%@booking.board.reviews.each do |review| %>
          <hr>
        <div class="review-box">
          <% review.rating.times do %>
            <i class="fas fa-star" style="color:#EAE01C;"></i>
          <% end %></p>
          <p> <%= review.content %> </p>
        </div>
        <% end %>
        <hr>
      </div>
    </div>

    <div class="description-container">
      <div class="booking-style">
        <p>From: <strong><%= @booking.start_date %></strong></p>
        <p>Until: <strong><%= @booking.end_date %></strong></p>
        <p>For: <strong><%= @duration = (@booking.end_date - @booking.start_date).to_i %> days</strong></p>
        <p>Total Cost: <strong>$<%= @duration * @booking.board.price %>0</strong></p>
      </div>
      <div class="booking-description">
        <h3>Board Description:</h3>
        <p><%= @booking.board.description %></p>
      </div>
    </div>
  </div>
</div>
