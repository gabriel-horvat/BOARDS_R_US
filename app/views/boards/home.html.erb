<div>
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,100,120,0.6) 0%, rgba(0,36,61,0.1) 30%), url('https://res.cloudinary.com/dfowktpgu/image/upload/v1534176779/8812177072_8022fe51f0_k.jpg');">
    <div class="container banner-content">
      <h1>Boards R' Us</h1>
      <h2>Snow, Skate, Surf - anywhere, anytime</h2>


    </div>
  </div>

  <div class="container">
    <h3>Available Boards:</h3>

    <h4>Snow</h4>
    <div class="scrolling-wrapper">

      <% snow = @boards.select { |board| board.category == "Snowboard"} %>
      <% snow.each do |board|%>
      <div class="card">

        <div class="card-outline">
          <div class="card-content card-image">
             <%= cl_image_tag(board.photo, height: 165, width: 270, crop: :fill) %>
          </div>
          <div class="card-content card-body">
            <p class="card-text"><strong><%= board.name %></strong></p>
            <p class="card-text"><%= board.location %></p>
            <p class="card-text">$<%= board.price %>0</p>
          </div>
        </div>
      </div>
      <% end %>
    </div>

    <h4>Skate</h4>
    <div class="scrolling-wrapper">
      <% skate = @boards.select { |board| board.category == "Skateboard"} %>
      <% skate.each do |board|%>

      <div class="card">

        <div class="card-outline">
          <div class="card-content card-image">
            <%= cl_image_tag(board.photo, height: 165, width: 270, crop: :fill) %>
          </div>
          <div class="card-content card-body">
            <p class="card-text"><strong><%= board.name %></strong></p>
            <p class="card-text"><%= board.location %></p>
            <p class="card-text">$<%= board.price %>0</p>
          </div>
        </div>
      </div>
      <% end %>
     </div>

    <h4>Surf</h4>
    <div class="scrolling-wrapper">
      <% surf = @boards.select { |board| board.category == "Surfboard"} %>
      <% surf.each do |board|%>

      <div class="card">

        <div class="card-outline">
          <div class="card-content card-image">
            <%= cl_image_tag(board.photo, height: 165, width: 270, crop: :fill) %>
          </div>
          <div class="card-content card-body">
            <p class="card-text"><strong><%= board.name %></strong></p>
            <p class="card-text"><%= board.location %></p>
            <p class="card-text">$<%= board.price %>0</p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>


