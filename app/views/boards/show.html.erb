<div class="container">
  <div class="row">
    <%# Info column %>
    <div class="col-xs-12 col-md-6">
       <div class="wrapper" id="booking-recap-wrapper">
          <div class="booking-recap-container">
            <div class="box-board-show-details">
              <div class="box-info text-center">
                <p>Belongs to:
                  <%= link_to "#{@board.name} #{@board.name}", user_path(@board.name)%>
                </p>
                <h4>Description: </h4>
                <p>
                  <%= @board.description %>
                </p>
                <div>
                  <% if (user_signed_in? && (current_user.id == @board.user_id)) %>
                  <div class="btn-box-board-show">
                   <p><%= link_to "Edit this board", edit_board_path(@board), class: "btn btn-sm btn-warning"%></p>
                   <p> <%= link_to "Remove this board", hide_board_path(@board), class: "btn btn-sm btn-danger"%> </p>
                 </div>
              <% end %>
              </div>
            </div>
          </div>
      </div>
   </div>

     <%# TODO: refactor to helper %>
   </div>
   <div class="col-xs-12 col-md-6">
    <% if (user_signed_in? && (current_user.id != @board.user_id)) %>
    <%= render 'boards/booking_form_embed' %>
    <% elsif (user_signed_in? == false)%>
    <%= link_to "Log in to book this watch!", new_user_session_path, class: "btn btn-primary"%>
    <% end %>
    <%= render 'boards/map', board: @board, map_circle: @map_circle %>
  </div>
</div>
</div>

