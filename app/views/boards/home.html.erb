<div>
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,100,120,0.6) 0%, rgba(0,36,61,0.1) 30%), url('https://images.unsplash.com/photo-1488402024618-0658e4c2b1f0?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=a7e2bda897d539228f2fa660a52b2613&auto=format&fit=crop&w=2076&q=80');">
    <div class="container banner-content">


      <div class="titles">
        <h1>Boards R' Us</h1>
      </div>
      <div class="container search-form">
        <div class="col-sm-6">

          <%= form_tag boards_path, method: :get do %>

          <p class="white-color">Pick a board category:</p>
          <%= select_tag :category, options_for_select(["Snowboard", "Skateboard", "Surfboard"]),
          class: "form-control" %>

          <br>
          <p class="white-color">Find a place:</p>
          <%= text_field_tag :place,
          params[:place],
          class: "form-control",
            label: "Location",
            placeholder: "Location" %>

            <br>
          </div>
          <div class="col-sm-6">

            <p class="white-color">From:</p>
            <%= date_field_tag :time_start,
            params[:time_start], :value => Time.now.strftime('%Y-%m-%d'),
            class: "form-control",
              label: "Start Date",
              placeholder: "From" %>
              <br>
              <p class="white-color">Until:</p>
              <%= date_field_tag :time_end,
              params[:time_end], :value => Time.now.strftime('%Y-%m-%d'),
              class: "form-control",
                label: "End Date",
                placeholder: "To" %>
                <% @time_end = params[:time_end] %>

                <br>
                <div class="sf-button">
                  <%= submit_tag "Search Board", class: "btn btn-primary" %>
                </div>
              </div>
              <% end %>

            </div>
          </div>

        </div>

        <div class="transition">
        </div>

        <div class="container">
          <h3 class="white-color" >All Our Boards:</h3>

          <div class="category">
            <h4 class="white-color">Snow</h4>
            <div class="scrolling-wrapper">


              <% snow = @boards.select { |board| board.category == "Snowboard"} %>
              <% snow.each do |board|%>
              <div class="card">

                <div class="card-outline">
                  <div class="card-content card-image">
                    <%= cl_image_tag(board.photo, class: 'card-img') %>
                  </div>
                  <div class="card-content card-body">
                    <p class="card-text"><%=link_to board.name, board_path(board)%></p>
                    <p class="card-text">$<%= board.price %>0</p>
                    <p class="card-text"><%=board.location%></p>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
          </div>

          <div class="category">
            <h4 class="white-color">Skate</h4>
            <div class="scrolling-wrapper">
              <% skate = @boards.select { |board| board.category == "Skateboard"} %>
              <% skate.each do |board|%>

              <div class="card">

                <div class="card-outline">
                  <div class="card-content card-image">
                    <%= cl_image_tag(board.photo, class: 'card-img') %>
                  </div>
                  <div class="card-content card-body">
                    <p class="card-text"><%=link_to board.name, board_path(board)%></p>
                    <p class="card-text">$<%= board.price %>0</p>
                    <p class="card-text"><%=board.location%></p>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
          </div>

          <div class="category">
            <h4 class="white-color">Surf</h4>
            <div class="scrolling-wrapper">
              <% surf = @boards.select { |board| board.category == "Surfboard"} %>
              <% surf.each do |board|%>

              <div class="card">

                <div class="card-outline">
                  <div class="card-content card-image">
                    <%= cl_image_tag(board.photo, class: 'card-img') %>
                  </div>
                  <div class="card-content card-body">
                    <p class="card-text"><%=link_to board.name, board_path(board)%></p>
                    <p class="card-text">$<%= board.price %>0</p>
                    <p class="card-text"><%=board.location%></p>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
          </div>

        </div>
      </div>




